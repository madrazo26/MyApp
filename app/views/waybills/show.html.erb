<% currently_at 'Waybills' %>
<h1 class="mb-4"><%= @waybill.title %></h1>


<time datetime="<%= @waybill.formatted_created_at %>">
  <%= @waybill.formatted_created_at %>
</time>

<div class="lead my-3">
  <%= sanitize @waybill.body %>
</div>

<%= link_to 'Show', waybills_path(@waybill), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_waybill_path(@waybill), class: 'btn btn-secondary' %>
<%= link_to 'Destroy', waybill_path(@waybill), class: 'btn btn-danger',
            data: {method: :delete, confirm: 'Are you sure?'} %>

<hr class="my-3">

<h2>Write your answer</h2>

<%= render 'answers/form' %>

<h2 class="mt-5">Answers</h2>

<%= paginate @answers %>

<%= render partial: 'answers/answer', collection: @answers, as: :answer,
locals: { waybill: @waybill} %>

<%= paginate @answers %>